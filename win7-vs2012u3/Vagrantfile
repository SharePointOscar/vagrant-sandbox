# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  # All Vagrant configuration is done here. The most common configuration
  # options are documented and commented below. For a complete reference,
  # please see the online documentation at vagrantup.com.

  # Every Vagrant virtual environment requires a box to build off of.
  config.vm.box = "stefan-win7x64"

  # The url from where the 'config.vm.box' box will be fetched if it
  # doesn't already exist on the user's system.
  config.vm.box_url = "file:///e:/basebox/stefan-win7x64.box"
  config.vm.guest = :windows

  # Max time to wait for the guest to shutdown
  config.windows.halt_timeout = 25

  config.vm.define "default", primary: true do |default|
    default.vm.box = "stefan-win7x64"
#    default.vm.network :private_network, ip: "192.168.33.10", gateway: "192.168.33.1"
    default.vm.provision "shell", path: "shell/main.cmd"
    default.winrm.port = 25985
    default.vm.network :forwarded_port, guest: 5985, host: 25985

     default.vm.provider :virtualbox do |vb|
       vb.gui = true
       vb.customize ["modifyvm", :id, "--memory", "2048", "--cpus", "2"]
     end
  end

  config.vm.define "testwin7x64" do |testwin7x64|
    testwin7x64.vm.box = "stefan-win7x64"
#    testwin7x64.vm.network :private_network, ip: "192.168.33.11", gateway: "192.168.33.1"
    testwin7x64.vm.provision "shell", path: "shell/test.cmd"
    testwin7x64.winrm.port = 25986
    testwin7x64.vm.network :forwarded_port, guest: 5985, host: 25986

    testwin7x64.vm.provider :virtualbox do |vb|
      vb.gui = true
      vb.customize ["modifyvm", :id, "--memory", "768"]
    end
  end

  # Admin user name and password
  config.winrm.username = "vagrant"
  config.winrm.password = "vagrant"

end
